    <Style x:Key="zBonusCollectionTextStack" TargetType="StackLayout">
        
    </Style>
    <Style x:Key="zBonusCollectionLabel" TargetType="Label" BasedOn="{StaticResource Font_14}">
        <Setter Property="Text" Value="Начисление баллов за заказ"/>
    </Style>
    <Style x:Key="zBonusCollectionDate" TargetType="Label" BasedOn="{StaticResource Font_14}">
        <Setter Property="TextColor" Value="{DynamicResource GrayColor}"/>
    </Style>
    <Style x:Key="zBonusCollectionBonusStack" TargetType="StackLayout">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Grid.Column" Value="1"/>
    </Style>
    <Style x:Key="zBonusCollectionBall" TargetType="Label" BasedOn="{StaticResource Font_14Bold}">
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style x:Key="zBonusCollectionBonus" TargetType="ImageButton" BasedOn="{StaticResource ImageButtonBonus}">
    </Style>
