    <Style x:Key="zProductInfoPlus" TargetType="ImageButton" BasedOn="{StaticResource zProductInfoMinus}">
        <Setter Property="Source" Value="{DynamicResource PlusButton}"/>
        <Setter Property="Grid.Column" Value="2"/>
    </Style>
    <Style x:Key="zProductInfoDescriptionHeader" TargetType="Label" BasedOn="{StaticResource Font_14}">
        <Setter Property="Text" Value="Информация о товаре"/>
    </Style>
    <Style x:Key="zProductInfoDescription" TargetType="Label" BasedOn="{StaticResource Font_14}">
        <Setter Property="TextColor" Value="{DynamicResource GrayColor}"/>
        <Setter Property="Text" Value="Количество:"/>
    </Style>
    <Style x:Key="zProductInfoAdd" TargetType="Button" BasedOn="{StaticResource SimpleButton}">
        <Setter Property="Text" Value="Отправить в корзину"/>
    </Style>
