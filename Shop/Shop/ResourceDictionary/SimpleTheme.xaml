    </Style>
    <Style x:Key="zFilterSortingSorting" TargetType="Picker" BasedOn="{StaticResource zFilterSortingFilter}">
        <Setter Property="TitleColor" Value="{DynamicResource Black}"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource White}"/>
        <Setter Property="Grid.Column" Value="1"/>
        <Setter Property="Title" Value="Сортировка"/>
    </Style>
    <!--PRODUCTINFO-->
    <Style x:Key="zProductInfoMainStack" TargetType="StackLayout">
        <Setter Property="Padding" Value="20,0,20,0"/>
        <Setter Property="Spacing" Value="15"/>
    </Style>
    <Style x:Key="zProductInfoFrame" TargetType="Frame">
        <Setter Property="Margin" Value="-20,0,-20,0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="zProductInfoImage" TargetType="Image">
        <Setter Property="HeightRequest" Value="300"/>
        <Setter Property="Aspect" Value="AspectFill"/>
    </Style>
    <Style x:Key="zProductInfoLPrice" TargetType="Label" BasedOn="{StaticResource Font_14Bold}">
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style x:Key="zProductInfoCountHeader" TargetType="Label" BasedOn="{StaticResource Font_14}">
        <Setter Property="TextColor" Value="{DynamicResource GrayColor}"/>
        <Setter Property="Text" Value="Количество:"/>
    </Style>
    <Style x:Key="zProductInfoGrid" TargetType="Grid">
        <Setter Property="RowDefinitions" Value="Auto"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="ColumnDefinitions" Value="Auto,Auto,Auto"/>
    </Style>
    <Style x:Key="zProductInfoMinus" TargetType="ImageButton">
        <Setter Property="Source" Value="{DynamicResource MinusButton}"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
        <Setter Property="WidthRequest" Value="25"/>
        <Setter Property="HeightRequest" Value="25"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
    <Style x:Key="zProductInfoCount" TargetType="Label" BasedOn="{StaticResource Font_14Bold}">
        <Setter Property="Grid.Column" Value="1"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
