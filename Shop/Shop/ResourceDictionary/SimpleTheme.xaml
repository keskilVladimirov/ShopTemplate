<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:pancakeview="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.ResourceDictionary.SimpleTheme">
    <!--COLORS-->
    <Color x:Key="ThemeColor">#000001</Color>
    <Color x:Key="White">#FEFFFF</Color>
    <Color x:Key="Black">#000001</Color>
    <Color x:Key="GrayColorLight">#EFEFEF</Color>
    <Color x:Key="GrayColor">#A7A7A7</Color>
    <!--ВЫБОР ЦВЕТОВ TABBAR И SHELL-->
    <!--ЦВЕТ КНОПКИ НАЗАД-->
    <Color x:Key="HeaderBackColor">#000001</Color>
    <!--ФОНОВЫЙ ЦВЕТ ГОЛОВЫ-->
    <Color x:Key="HeaderPageColor">#EFEFEF</Color>
    <!--ФОНОВЫЙ ЦВЕТ ПОДВАЛА-->
    <Color x:Key="BottomPageColor">#EFEFEF</Color>
    <!--ЦВЕТ ВЫБРАННОЙ ИКОНКИ ПОДВАЛА И ТЕКСТА ГОЛОВЫ-->
    <Color x:Key="IconCurrentColor">#000001</Color>
    <!--ЦВЕТ НЕАКТИВНЫХ ИКОНОК ПОДВАЛА-->
    <Color x:Key="IconUnselectedColor">#A7A7A7</Color>
    <!--ФОНОВЫЙ ЦВЕТ ЛЮБОЙ СТРАНИЦЫ-->
    <Color x:Key="BackgroundPageColor">#EFEFEF</Color>
    <!--FONTSFAMILY-->
    <x:String x:Key="NeoSansPro">NeoSansPro</x:String>
    <x:String x:Key="NeoSansProBold">NeoSansProBold</x:String>
    <!--NAMESOFIMAGES-->
    <x:String x:Key="BonusIcon">themesimpleBonusIcon.png</x:String>
    <x:String x:Key="GrayFind">GrayFind.png</x:String>
    <x:String x:Key="Discount">themesimpleDiscount.png</x:String>
    <x:String x:Key="AddBasket">AddBasket.png</x:String>
    <x:String x:Key="PlusButton">PlusButton.png</x:String>
    <x:String x:Key="MinusButton">MinusButton.png</x:String>
    <x:String x:Key="Next">Next.png</x:String>
    <x:String x:Key="SyberiaLogo">SyberiaLogo.png</x:String>
    <x:String x:Key="HomeIcon">HomeIcon.png</x:String>
    <x:String x:Key="OrdersIcon">OrdersIcon.png</x:String>
    <x:String x:Key="BasketIcon">BasketIcon.png</x:String>
    <x:String x:Key="ProfileIcon">ProfileIcon.png</x:String>
    <!--BUTTONS-->
    <Style x:Key="BlankButton" TargetType="Button">
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="TextTransform" Value="None"/>
    </Style>
    <Style x:Key="SimpleButton" TargetType="Button" BasedOn="{StaticResource BlankButton}">
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="320"/>
        <Setter Property="CornerRadius" Value="40"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource ThemeColor}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="TextColor" Value="{DynamicResource White}"/>
    </Style>
    <Style x:Key="ButtonChoice" TargetType="Button" BasedOn="{StaticResource BlankButton}">
        <Setter Property="WidthRequest" Value="112"/>
        <Setter Property="HeightRequest" Value="52"/>
        <Setter Property="CornerRadius" Value="11"/>
        <Setter Property="TextColor" Value="{DynamicResource ThemeColor}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource White}"/>
        <Setter Property="BorderWidth" Value="1"/>
        <Setter Property="BorderColor" Value="{DynamicResource GrayColorLight}"/>
    </Style>
    <Style x:Key="ButtonChoiced" TargetType="Button" BasedOn="{StaticResource BlankButton}">
        <Setter Property="WidthRequest" Value="112"/>
        <Setter Property="HeightRequest" Value="52"/>
        <Setter Property="CornerRadius" Value="11"/>
        <Setter Property="TextColor" Value="{DynamicResource White}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource ThemeColor}"/>
    </Style>
    <!--IMAGEBUTTONS-->
    <Style x:Key="ImageButtonSimple" TargetType="ImageButton">
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="Aspect" Value="AspectFit"/>
    </Style>
    <Style x:Key="ImageButtonBonus" TargetType="ImageButton" BasedOn="{StaticResource ImageButtonSimple}">
        <Setter Property="Source" Value="{DynamicResource BonusIcon}"/>
    </Style>
    <!--ENTRIES-->
    <Style x:Key="BlankEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="PlaceholderColor" Value="{DynamicResource GrayColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource Black}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style x:Key="EntryGray" TargetType="Entry" BasedOn="{StaticResource BlankEntry}">
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="320"/>
    </Style>
    <!--FRAMES-->
    <Style x:Key="EntryFrame" TargetType="Frame">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource GrayColorLight}"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="Padding" Value="30,10,30,10"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="280"/>
    </Style>
    <Style x:Key="DefaultCornerFrame" TargetType="Frame">
        <Setter Property="CornerRadius" Value="80"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
    <!--IMAGES-->
    <Style x:Key="BlankImage" TargetType="Image">
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="Aspect" Value="AspectFit"/>
    </Style>
    <Style x:Key="RegistrationImage" TargetType="Image" BasedOn="{StaticResource BlankImage}">
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="HeightRequest" Value="150"/>
    </Style>
    <Style x:Key="BonusImage" TargetType="Image" BasedOn="{StaticResource BlankImage}">
        <Setter Property="Source" Value="{DynamicResource BonusIcon}"/>
        <Setter Property="WidthRequest" Value="13"/>
        <Setter Property="HeightRequest" Value="13"/>
    </Style>
    <!--LABELS-->
    <Style x:Key="Font_14" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource Black}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
    </Style>
    <Style x:Key="Font_14Bold" TargetType="Label" BasedOn="{StaticResource Font_14}">
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>
    <!--CHECKBOX-->
    <Style x:Key="SimpleCheckbox" TargetType="CheckBox">
        <Setter Property="Color" Value="{DynamicResource ThemeColor}"/>
    </Style>
    <!--PICKERS-->
    <Style x:Key="SimplePicker" TargetType="Picker">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="{DynamicResource Black}"/>
        <Setter Property="TitleColor" Value="{DynamicResource GrayColor}"/>
    </Style>
    <Style x:Key="SortingFilter" TargetType="Picker">
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource White}"/>
        <Setter Property="TextTransform" Value="None"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="{DynamicResource GrayColor}"/>
        <Setter Property="Margin" Value="-2,0,-2,-30"/>
    </Style>
    <!--ADDBANNER-->
    <Style x:Key="zAddBannerFrame" TargetType="Frame">
        <Setter Property="Padding" Value="0"/>
    </Style>
    <Style x:Key="zAddBannerImage" TargetType="Image">
        <Setter Property="Aspect" Value="AspectFill"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HeightRequest" Value="180"/>
    </Style>
    <!--HEADERCATEGORYPAGES-->
    <Style x:Key="zHeaderCategoryPagesStackLayout" TargetType="StackLayout">
        <Setter Property="Spacing" Value="0"/>
    </Style>
    <Style x:Key="zHeaderCategoryPagesGrid" TargetType="Grid">
        <Setter Property="Padding" Value="20,10,20,10"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource HeaderPageColor}"/>
    </Style>
    <Style x:Key="zHeaderCategoryPagesFrame" TargetType="Frame" BasedOn="{StaticResource DefaultCornerFrame}">
        
    </Style>
    <Style x:Key="zHeaderCategoryPagesImage" TargetType="Image" BasedOn="{StaticResource RegistrationImage}">
        <Setter Property="Aspect" Value="AspectFill"/>
        <Setter Property="WidthRequest" Value="70"/>
        <Setter Property="HeightRequest" Value="70"/>
    </Style>
    <Style x:Key="zHeaderCategoryPagesImageButton" TargetType="ImageButton" BasedOn="{StaticResource ImageButtonSimple}">
        <Setter Property="Source" Value="{DynamicResource GrayFind}"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="HeightRequest" Value="25"/>
        <Setter Property="WidthRequest" Value="25"/>
