    <Style x:Key="zHeaderCategoryPagesLabel" TargetType="Label" BasedOn="{StaticResource Font_14Bold}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Padding" Value="20,10,20,10"/>
        <Setter Property="Text" Value="Категории"/>
    </Style>
    <!--CATEGORYCOLLECTION-->
    <Style x:Key="zCategoryCollectionView" TargetType="CollectionView">
        <Setter Property="ItemsLayout">
            <GridItemsLayout Orientation="Vertical"
                             Span="2"/>
        </Setter>
        <Setter Property="SelectionMode" Value="Single"/>
    </Style>
    <Style x:Key="zCategoryCollectionFrame" TargetType="Frame">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0,20,0,0"/>
        <Setter Property="WidthRequest" Value="175"/>
        <Setter Property="HeightRequest" Value="175"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>
    <Style x:Key="zCategoryCollectionGrid" TargetType="Grid">
        <Setter Property="RowDefinitions" Value="*,*,*"/>
    </Style>
    <Style x:Key="zCategoryCollectionFrameImage" TargetType="Frame">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Grid.RowSpan" Value="3"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="zCategoryCollectionImage" TargetType="Image" BasedOn="{StaticResource RegistrationImage}">
        <Setter Property="WidthRequest" Value="175"/>
        <Setter Property="HeightRequest" Value="175"/>
        <Setter Property="Aspect" Value="AspectFill"/>
    </Style>
    <Style x:Key="zCategoryCollectionLabel" TargetType="Label" BasedOn="{StaticResource Font_14}">
        <Setter Property="BackgroundColor" Value="{DynamicResource GrayColor}"/>
        <Setter Property="TextColor" Value="{DynamicResource White}"/>
        <Setter Property="WidthRequest" Value="175"/>
        <Setter Property="HeightRequest" Value="58"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Opacity" Value="0.6"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="Grid.Row" Value="2"/>
    </Style>
    <!--PRODUCTLIST-->
    <Style x:Key="zProductListCollectionView" TargetType="CollectionView">
        <Setter Property="ItemsLayout">
            <GridItemsLayout Orientation="Vertical"
                             Span="2"/>
        </Setter>
        <Setter Property="SelectionMode" Value="Single"/>
    </Style>
    <Style x:Key="zProductListFrame" TargetType="Frame">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource White}"/>
    </Style>
    <Style x:Key="zProductListWrapperStack" TargetType="StackLayout">
        
    </Style>
    <Style x:Key="zProductListFrameImage" TargetType="Frame">
        <Setter Property="Padding" Value="0"/>
    </Style>
    <Style x:Key="zProductListImage" TargetType="Image">
        <Setter Property="Aspect" Value="AspectFill"/>
        <Setter Property="HeightRequest" Value="175"/>
    </Style>
    <Style x:Key="zProductListSale" TargetType="Image" BasedOn="{StaticResource BlankImage}">
        <Setter Property="Source" Value="{DynamicResource Discount}"/>
        <Setter Property="WidthRequest" Value="50"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="VerticalOptions" Value="Start"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="Margin" Value="0,-10,-10,0"/>
    </Style>
    <Style x:Key="zProductListStackLayoutPrice" TargetType="StackLayout">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Padding" Value="10,0,0,0"/>
    </Style>
    <Style x:Key="zProductListPrice" TargetType="Label" BasedOn="{StaticResource Font_14Bold}">
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style x:Key="zProductListPriceStrikethrough" TargetType="Label" BasedOn="{StaticResource zProductListPrice}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextColor" Value="{DynamicResource GrayColor}"/>
        <Setter Property="TextDecorations" Value="Strikethrough"/>
    </Style>
    <Style x:Key="zProductListName" TargetType="Label" BasedOn="{StaticResource Font_14}">
        <Setter Property="TextColor" Value="{DynamicResource GrayColor}"/>
        <Setter Property="Margin" Value="10,0,10,10"/>
        <Setter Property="Grid.Row" Value="1"/>
    </Style>
    <Style x:Key="zProductListAddBasket" TargetType="ImageButton" BasedOn="{StaticResource ImageButtonSimple}">
        <Setter Property="Grid.RowSpan" Value="2"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="WidthRequest" Value="32"/>
        <Setter Property="HeightRequest" Value="32"/>
        <Setter Property="Source" Value="{DynamicResource AddBasket}"/>
    </Style>
    <!--ORDERSDETAILSUMM-->
    <Style x:Key="zOrdersDetailSummGrid" TargetType="Grid">
        <Setter Property="Padding" Value="20,10,20,10"/>
    </Style>
    <Style x:Key="zOrdersDetailSummFrame" TargetType="Frame">
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource White}"/>
    </Style>
    <Style x:Key="zOrdersDetailSummLabel" TargetType="Label" BasedOn="{StaticResource Font_14}">
        
    </Style>
    <!--FILTERSORTING-->
    <Style x:Key="zFilterSortingGrid" TargetType="Grid">
        <Setter Property="ColumnDefinitions" Value="*,*"/>
        <Setter Property="RowDefinitions" Value="Auto"/>
        <Setter Property="Padding" Value="0,1,0,20"/>
    </Style>
    <Style x:Key="zFilterSortingFilter" TargetType="Picker" BasedOn="{StaticResource SortingFilter}">
        <Setter Property="TitleColor" Value="{DynamicResource Black}"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource White}"/>
